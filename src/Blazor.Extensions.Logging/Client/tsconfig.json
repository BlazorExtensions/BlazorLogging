{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
